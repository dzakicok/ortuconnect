<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AbsensiItemPlaceholder">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/rounded_grey_placeholder</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>
    <!-- Harap tempatkan styles tema utama Anda (AppTheme) di sini -->

    <!-- ********************************************** -->
    <!-- STYLES KHUSUS UNTUK CALENDARVIEW (Kalender Kegiatan) -->
    <!-- ********************************************** -->

    <!-- Style untuk tampilan Hari (Su, Mo, Tu, dll.) -->
    <!-- Font Size 12sp, warna hitam (sesuai tampilan umum) -->
    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style untuk tampilan Tanggal (1, 2, 3, dll.) -->
    <!-- Font Size 14sp, warna hitam -->
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.Medium">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>